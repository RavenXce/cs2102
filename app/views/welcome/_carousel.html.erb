<div id="carousel-main" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  	<% @carousel.each_with_index do |c, index| %>
    <li data-target="#carousel-main" data-slide-to="<%=index%>"<%= index == 0 ? ' class=active' : '' %>></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  	<% @carousel.each_with_index do |c, index| %>
    <div class="item<%= index == 0 ? ' active' : '' %>">
      <img src="<%=image_url ('carousel/' + c["src"])%>" alt="<%= c["alt"] %>">
      <div class="carousel-caption">
      	<h3><%= c["caption"] %></h3>
    	<p><%= c["text"] %></p>
      </div>
    </div>
    <% end%>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-main" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-main" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>