<blockquote>
	<h2>Sign in</h2>
</blockquote>

<div class="col-xs-6 col-sm-4">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true, :class => 'form-control' %></div>
	
	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, :class => 'form-control' %></div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="checkbox"><label><%= f.check_box :remember_me %> Remember me</div></label>
	  <% end -%>
	
	  <div><%= f.submit "Log in", :class => 'btn' %></div>
	  <br />
	  
	<% end %>
	<%= render "devise/shared/links" %>
</div>
